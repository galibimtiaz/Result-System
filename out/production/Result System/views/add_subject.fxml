<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="12.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddSubjectController">
   <children>
      <HBox layoutX="26.0" layoutY="100.0" spacing="12.0">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <children>
            <TextField fx:id="subjectName" minWidth="214.0" prefHeight="40.0" promptText="SUBJECT NAME">
               <font>
                  <Font size="14.0" />
               </font></TextField>
         </children>

         <ComboBox fx:id="sub_credit" minWidth="214.0" prefHeight="40.0" promptText="SELECT CREDIT">
            <HBox.margin>
               <Insets/>
            </HBox.margin>
         </ComboBox>
      </HBox>
      <HBox spacing="12.0">
         <children>
            <TextField fx:id="subjectCode" minWidth="214.0" prefHeight="40.0" promptText="SUBJECT CODE">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <ComboBox fx:id="departments" minWidth="214.0" prefHeight="40.0" promptText="SELECT DEPT">
               <HBox.margin>
                  <Insets />
               </HBox.margin></ComboBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox layoutX="26.0" layoutY="136.0" spacing="12.0">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <children>
            <Text fx:id="msg" fill="#d35b5b" strokeType="OUTSIDE" strokeWidth="0.0" text="error msg">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addSubject" prefWidth="100.0" text="Add Subject" />
            <Button mnemonicParsing="false" onAction="#close" prefWidth="100.0" text="Close" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</VBox>
